{
  "manifest_version": 3,
  "name": "Yt shorts remover",
  "version": "0.1.0",
  "description": "Remove short from Yt desktop",
  "permissions": ["storage", "tabs"],
  "host_permissions": ["*://*.youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["main.js"]
    }
  ],
  "action": {
    "default_icon": {
      "64": "assets/icon64.png"
    },
    "default_title": "Yt shorts remover",
    "default_popup": "popup.html"
  }
}
